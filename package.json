{
  "name": "beerselector",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --config=jest.config.js --watchAll",
    "test:ci": "jest --config=jest.config.js --ci --coverage --reporters=default --reporters=jest-junit",
    "test:e2e": "maestro test .maestro/",
    "test:e2e:ios": "APP_ID=org.verily.FSbeerselector maestro test .maestro/",
    "test:e2e:android": "APP_ID=com.yourcompany.beerselector maestro test .maestro/",
    "test:e2e:single": "maestro test",
    "test:performance": "flashlight test --config .flashlight/performance-tests.yaml",
    "test:performance:report": "flashlight test --config .flashlight/performance-tests.yaml --report && flashlight report .flashlight/reports/latest.json",
    "mock-server": "node mock-server.js",
    "lint": "expo lint",
    "prepare": "husky"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "expo": "^53.0.24",
    "expo-blur": "~14.1.5",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-linking": "~7.1.7",
    "expo-router": "~5.1.7",
    "expo-secure-store": "~14.2.4",
    "expo-splash-screen": "~0.30.10",
    "expo-sqlite": "~15.2.14",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.11",
    "expo-web-browser": "~14.2.0",
    "live-activity": "file:./modules/live-activity",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-native": "^0.79.6",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "^0.20.0",
    "react-native-webview": "13.13.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-class-static-block": "^7.26.0",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.10",
    "@types/react-test-renderer": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~9.2.0",
    "express": "^4.21.2",
    "husky": "^9.1.7",
    "jest": "^29.2.1",
    "jest-expo": "~53.0.10",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.0.0",
    "typescript": "~5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "private": true
}
